@using Luce.ViewModels.CustomerViewModel
@model Luce.ViewModels.CustomerViewModel.TestViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateOrder" method="post">
    <fieldset>
        <legend>Delivery Address</legend>
        <div class="form-group">
            <label asp-for="DeliveryAddress.HouseNumber" class="control-label"></label>
            <input asp-for="DeliveryAddress.HouseNumber" class="form-control" />
            <span asp-validation-for="DeliveryAddress.HouseNumber" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="DeliveryAddress.StreetName" class="control-label"></label>
            <input asp-for="DeliveryAddress.StreetName" class="form-control" />
            <span asp-validation-for="DeliveryAddress.StreetName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryAddress.LGA" class="control-label"></label>
            <input asp-for="DeliveryAddress.LGA" class="form-control" />
            <span asp-validation-for="DeliveryAddress.LGA" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryAddress.Town" class="control-label"></label>
            <input asp-for="DeliveryAddress.Town" class="form-control" />
            <span asp-validation-for="DeliveryAddress.Town" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DeliveryAddress.State" class="control-label"></label>
            <input asp-for="DeliveryAddress.State" class="form-control" />
            <span asp-validation-for="DeliveryAddress.State" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DeliveryAddress.Country" class="control-label"></label>
            <input asp-for="DeliveryAddress.Country" class="form-control" />
            <span asp-validation-for="DeliveryAddress.Country" class="text-danger"></span>
        </div>
    </fieldset>

    <div class="form-group">
        <label asp-for="Distance" class="control-label"></label>
        <input asp-for="Distance" class="form-control" />
        <span asp-validation-for="Distance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RateValue" class="control-label"></label>
        <input asp-for="RateValue" class="form-control" />
        <span asp-validation-for="RateValue" class="text-danger"></span>
    </div>

    

    <h3>Cart Items</h3>
    <div id="cart-items-container">
        @for (int i = 0; i < Model.CartItems.Count; i++)
        {
            
            <div class="cart-item">
                <div class="form-group">                
                    <input asp-for="CartItems[i].ProductDto.ProductName" class="form-control" readonly/>   
                </div>

                <div class="form-group">
                    <label asp-for="CartItems[i].ProductDto.Price" class="control-label"></label>
                    <input asp-for="CartItems[i].ProductDto.Price" class="form-control"readonly />
                    <span asp-validation-for="CartItems[i].ProductDto.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CartItems[i].Quantity" class="control-label"></label>
                    <input asp-for="CartItems[i].Quantity" class="form-control" readonly/>
                    <span asp-validation-for="CartItems[i].Quantity" class="text-danger"></span>
                </div>
            </div>
        }
    </div>

     <div class="form-group">
        <label>Total Price</label>
        <input type="number" class="form-control" value="@Model.Payment.Amount" readonly />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Order</button>
    </div>
</form>
       


       
 
   
    