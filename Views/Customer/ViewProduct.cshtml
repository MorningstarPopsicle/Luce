@using Luce.ViewModels.ProductViewModel
@model Luce.ViewModels.ProductViewModel.ViewProductViewModel
@{
    Layout = "";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Product Page</title>
</head>


<div class="info">
    <div>
        <label>
            PRODUCT NAME:@Model.ProductName 
        </label>
    </div>

    <div>
        <label>
            PRICE: @Model.Price
        </label>
    </div>


    <div>
        <label>
            IMAGE URL: @Model.ImageUrl
        </label>
    </div>

    <div><a  class="btn-danger btn" asp-controller="Customer"  asp-action="CreateCartItem" asp-route-productId=@Model.Id>Add to Cart</a></div>    
</div>

